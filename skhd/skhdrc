# cmd + alt + ctrl is set to capslock using karabiner elements

# Navigation
cmd + alt + ctrl - h : yabai -m window --focus west
cmd + alt + ctrl - j : yabai -m window --focus south
cmd + alt + ctrl - k : yabai -m window --focus north
cmd + alt + ctrl - l : yabai -m window --focus east

# Moving windows
shift + cmd + alt + ctrl - h : yabai -m window --warp west
shift + cmd + alt + ctrl - j : yabai -m window --warp south
shift + cmd + alt + ctrl - k : yabai -m window --warp north
shift + cmd + alt + ctrl - l : yabai -m window --warp east

# Equalize size of windows
cmd + alt + ctrl - e : yabai -m space --balance

# Focus workspaces/desktops
cmd + alt + ctrl - 1 : yabai -m space --focus 1
cmd + alt + ctrl - 2 : yabai -m space --focus 2
cmd + alt + ctrl - 3 : yabai -m space --focus 3
cmd + alt + ctrl - 4 : yabai -m space --focus 4
cmd + alt + ctrl - 5 : yabai -m space --focus 5
cmd + alt + ctrl - 6 : yabai -m space --focus 6
cmd + alt + ctrl - 7 : yabai -m space --focus 7
cmd + alt + ctrl - 8 : yabai -m space --focus 8
cmd + alt + ctrl - 9 : yabai -m space --focus 9
cmd + alt + ctrl - 0 : yabai -m space --focus 10

# Send window to a workspace and focus it
shift + cmd + alt + ctrl - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + cmd + alt + ctrl - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + cmd + alt + ctrl - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + cmd + alt + ctrl - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + cmd + alt + ctrl - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + cmd + alt + ctrl - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + cmd + alt + ctrl - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + cmd + alt + ctrl - 8 : yabai -m window --space 8; yabai -m space --focus 8
shift + cmd + alt + ctrl - 9 : yabai -m window --space 9; yabai -m space --focus 9
shift + cmd + alt + ctrl - 0 : yabai -m window --space 10; yabai -m space --focus 10

# Focus monitor
cmd + alt + ctrl - q : yabai -m display --focus 1
cmd + alt + ctrl - w : yabai -m display --focus 2

# Send window to monitor and focus it
shift + cmd + alt + ctrl - q : yabai -m window --display 1; yabai -m display --focus 1
shift + cmd + alt + ctrl - w : yabai -m window --display 2; yabai -m display --focus 2

# Rotate windows clockwise and anticlockwise
cmd + alt + ctrl - r : yabai -m space --rotate 270
shift + cmd + alt + ctrl - r : yabai -m space --rotate 90

# Mirror on X and Y Axis
cmd + alt + ctrl - x : yabai -m space --mirror y-axis
shift + cmd + alt + ctrl - x : yabai -m space --mirror x-axis

# Float / Unfloat window and center it
cmd + alt + ctrl - space : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Resize windows
cmd + alt + ctrl - u : yabai -m window --resize left:-30:0; \
                  yabai -m window --resize right:-30:0
cmd + alt + ctrl - i : yabai -m window --resize bottom:0:30; \
                  yabai -m window --resize top:0:30
cmd + alt + ctrl - o : yabai -m window --resize top:0:-30; \
                  yabai -m window --resize bottom:0:-30
cmd + alt + ctrl - p : yabai -m window --resize right:30:0; \
                  yabai -m window --resize left:30:0

# Fullscreen windows
cmd + alt + ctrl - f : yabai -m window --toggle zoom-fullscreen
shift + cmd + alt + ctrl - f : yabai -m window --toggle native-fullscreen
